# ============================================
# Environment Configuration Example
# انسخ هذا الملف إلى .env وأملأ القيم الفعلية
# ============================================

# ===== DATABASE CONFIGURATION =====
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cms_db
DB_USERNAME=postgres
DB_PASSWORD=YourVerySecurePassword123!@#

# ===== SECURITY =====
JWT_SECRET=SuperSecureKeyThatIsAtLeast64CharactersLongToAvoidWeakKeyException1234567890ABC123XYZ
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=2592000000

# ===== EUREKA & CONFIG =====
EUREKA_SERVER=http://service-registry:8761/eureka
CONFIG_SERVER=http://config-server:8888

# ===== ENVIRONMENT =====
SPRING_PROFILES_ACTIVE=prod
ENVIRONMENT=production
LOG_LEVEL=INFO

# ===== SERVER CONFIGURATION =====
SERVER_PORT=6060
SERVER_SERVLET_CONTEXT_PATH=/api

# ===== JAVA OPTIONS =====
JAVA_OPTS_GATEWAY=-Xmx1024m -Xms512m
JAVA_OPTS_AUTH=-Xmx1024m -Xms512m
JAVA_OPTS_SERVICES=-Xmx1024m -Xms512m
JAVA_OPTS_REGISTRY=-Xmx512m -Xms256m

# ===== REDIS (Optional) =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== EXTERNAL SERVICES (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===== AWS (Optional for file storage) =====
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ===== MONITORING (Optional) =====
ZIPKIN_ENDPOINT=http://zipkin:9411/api/v2/spans
PROMETHEUS_PORT=9090

# ===== DOMAIN (for production) =====
DOMAIN=your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===== DOCKER IMAGE REGISTRY =====
DOCKER_REGISTRY=docker.io
IMAGE_TAG=latest
